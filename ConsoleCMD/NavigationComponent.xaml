<UserControl x:Class="ConsoleCMD.NavigationComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <TreeView x:Name="TW" Padding="5" Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Path=DirectoryHierarchy}" SelectedItemChanged="TW_SelectedItemChanged">
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                <StackPanel Orientation="Horizontal" Margin="2">
                    <Image Source="{Binding Path=IconSource}" Width="25" Height="25" Grid.Row="0" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Path=Title}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</UserControl>
