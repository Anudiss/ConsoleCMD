<Application x:Class="ConsoleCMD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dbmodels="clr-namespace:ConsoleCMD.Database.Models"
             xmlns:converters="clr-namespace:ConsoleCMD.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <converters:StringLengthConverter x:Key="StringLengthConverter"/>

        <Style x:Key="FontStyle" TargetType="FrameworkElement">
            <Setter Property="Control.FontFamily" Value="Ebrima"/>
            <Setter Property="Control.FontSize" Value="16"/>
        </Style>

        <SolidColorBrush x:Key="NavigationBackgroundColor" Color="#8d99ae"/>
        <SolidColorBrush x:Key="NavigationForegroundColor" Color="Black"/>

        <SolidColorBrush x:Key="DesktopBackgroundColor" Color="#edf2f4"/>
        <SolidColorBrush x:Key="DesktopForegroundColor" Color="Black"/>

        <SolidColorBrush x:Key="ConsoleBackgroundColor" Color="#2b2d42"/>
        <SolidColorBrush x:Key="ConsoleForegroundColor" Color="White"/>
        <SolidColorBrush x:Key="ConsoleCaretColor" Color="White"/>

        <DataTemplate DataType="{x:Type dbmodels:Directory}">
            <StackPanel Orientation="Horizontal"
                        Margin="2">
                <Image Source="{Binding Path=IconOrDefault}"
                       Width="25" Height="25"
                       Grid.Row="0"
                       Margin="0,0,5,0"
                       VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Path=Name, Converter={StaticResource StringLengthConverter}, ConverterParameter=33}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        
    </Application.Resources>
</Application>
