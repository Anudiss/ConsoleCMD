<Application x:Class="ConsoleCMD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dbmodels="clr-namespace:ConsoleCMD.Database.Models"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="CommonStyle" TargetType="FrameworkElement">
            <Setter Property="Control.FontFamily" Value="Cambria"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Background" Value="White"/>
        </Style>

        <DataTemplate DataType="{x:Type dbmodels:Directory}">
            <StackPanel Orientation="Horizontal" Margin="2">
                <Image Source="{Binding Path=IconOrDefault}"
                       Width="25" Height="25"
                       Grid.Row="0"
                       Margin="0,0,5,0"
                       VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
