<Page x:Class="ConsoleCMD.Pages.DesktopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConsoleCMD"
      mc:Ignorable="d"
      Title="DesktopPage" Background="White" FontFamily="Cambria" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="Categories" Grid.Column="0" BorderThickness="1" BorderBrush="Black">
            <TextBlock Text="Категории приложений"/>
            <Separator />
            <ListBoxItem>
                <local:CategoryComponent />
            </ListBoxItem>
        </ListBox>
        <WrapPanel Name="Applications" Grid.Column="1">
            
        </WrapPanel>
    </Grid>
</Page>
