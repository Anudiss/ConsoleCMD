<UserControl x:Class="ConsoleCMD.DesktopComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <ListBox x:Name="FileSystemObjectList"
                 ItemsSource="{Binding Source={x:Static local:NavigationComponent.CurrentDirectory},
                                       Path=Files}"
                 Background="{DynamicResource DesktopBackgroundColor}"
                 Foreground="{DynamicResource DesktopForegroundColor}"
                 BorderThickness="0"
                 Padding="10">

        <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Image Source="{Binding Path=IconOrDefault}"
                               Width="30"
                               Height="30"
                               Grid.Row="0"/>
                        <TextBlock Text="{Binding Path=FullName}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Grid.Row="1"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
</UserControl>
