<UserControl x:Class="ConsoleCMD.ConsoleComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" DataContext="{Binding RelativeSource={RelativeSource Self}}"
             Loaded="UserControl_Loaded">
    <Grid>
        <TextBox Name="TBConsole" TextChanged="TBConsole_TextChanged" Padding="5" Margin="5,0,5,5"
                 Background="{Binding Path=ConsoleBackgroundColor}" Foreground="{Binding Path=ConsoleForegroundColor}"
                 FontFamily="Consolas" TextWrapping="Wrap" Focusable="True"
                 VerticalScrollBarVisibility="Visible" PreviewKeyDown="TBConsole_PreviewKeyDown"/>
    </Grid>
</UserControl>
