<UserControl x:Class="ConsoleCMD.ConsoleComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}" Loaded="OnLoaded">
    <Grid>
        <TextBox Name="TBConsole" TextChanged="OnConsoleTextChanged" Padding="5"
                 Background="{Binding Path=BackgroundColor}" Foreground="{Binding Path=ForegroundColor}"
                 FontFamily="Consolas" TextWrapping="Wrap" Focusable="True"
                 VerticalScrollBarVisibility="Visible" PreviewKeyDown="TBConsole_PreviewKeyDown"/>
        <local:HintsBoxComponent x:Name="HintsBox" />
    </Grid>
</UserControl>
