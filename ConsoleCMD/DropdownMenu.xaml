<Popup x:Class="ConsoleCMD.DropdownMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             StaysOpen="True" Placement="Top" IsOpen="False" PlacementRectangle="{Binding Path=Bounds}">
    <Grid Background="White">
        <ListBox Name="LB" Background="White" ItemsSource="{Binding Path=Items}" HorizontalAlignment="Left" IsSynchronizedWithCurrentItem="True"
                 SelectionChanged="LB_SelectionChanged"/>
    </Grid>
</Popup>
