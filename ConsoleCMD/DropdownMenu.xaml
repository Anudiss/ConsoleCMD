<UserControl x:Class="ConsoleCMD.DropdownMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <local:ArrayToStringConverter x:Key="ArrayToString"/>
    </UserControl.Resources>
    <Grid Background="White">
        <TextBox Background="White" TextWrapping="Wrap" SelectionBrush="Green" IsReadOnly="True" Margin="5"
                 SelectionChanged="TextBox_SelectionChanged" Text="{Binding Path=Items, Converter=ArrayToString}"/>
    </Grid>
</UserControl>
