<local:FileSystemObject x:Class="ConsoleCMD.Directory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD" Style="{StaticResource CommonStyle}"
             mc:Ignorable="d" Width="100" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Width="25" Height="25" Grid.Row="0">
            <Image.Source>
                <Binding Path="IconSource">
                    <Binding.TargetNullValue>
                        <ImageSource>/Resources/Icons/directory.png</ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        <TextBlock Text="{Binding Title}" TextAlignment="Center" TextWrapping="Wrap" Grid.Row="1"/>
    </Grid>
</local:FileSystemObject>
