<Window x:Class="ConsoleCMD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleCMD"
        mc:Ignorable="d"
        Title="Система" Height="600" Width="1000" FontFamily="Times New Roman" FontSize="14"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="0" Margin="5"/>
        <local:ConsoleComponent x:Name="Console" Grid.Row="1"/>
        <TextBlock x:Name="StatusLine" Text="{Binding Path=StatusText, ElementName=Console}" Grid.Row="2" Margin="5,0,5,5"/>
    </Grid>
</Window>
