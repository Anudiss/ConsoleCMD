<Window x:Class="ConsoleCMD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleCMD"
        xmlns:console="clr-namespace:ConsoleCMD.Console"
        mc:Ignorable="d"
        Title="Система"
        Height="600" Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Style="{DynamicResource FontStyle}">
    
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".33*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ContentControl x:Name="Navigation"
                        Grid.Row="0" Grid.Column="0"
                        Content="{x:Static local:NavigationComponent.Instance}"/>

        <local:DesktopComponent x:Name="Desktop"
                                Grid.Row="0" Grid.Column="1"/>

        <console:ConsoleComponent x:Name="Console"
                                  Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
