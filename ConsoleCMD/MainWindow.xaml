<Window x:Class="ConsoleCMD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleCMD"
        mc:Ignorable="d"
        Title="Типа консоль" Height="600" Width="1000"
        Loaded="Window_ContentRendered" FontSize="14">
    <Grid Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="427*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="0" />
        <TextBox Name="TB" Grid.Row="1" Margin="5,5,5,5" Background="Black" Foreground="White" 
                 BorderThickness="0" KeyDown="TB_KeyDown" TextWrapping="Wrap" Focusable="True" TextChanged="TB_TextChanged"/>
        <TextBox Grid.Row="2" Name="StatusLine" Margin="5"/>
    </Grid>
</Window>
