<Window x:Class="ConsoleCMD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleCMD"
        mc:Ignorable="d"
        Title="Система" Height="600" Width="1000" FontFamily="Times New Roman" FontSize="14"
        Loaded="Window_Loaded" DataContext="{Binding RelativeSource={RelativeSource Self}}" SizeChanged="Window_SizeChanged" LocationChanged="Window_LocationChanged">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Grid.Row="0" Margin="5"/>
        <TextBox x:Name="TBConsole" Grid.Row="1" Padding="5" Margin="5,0,5,5"
                 Background="{Binding Path=ConsoleBackgroundColor}" Foreground="{Binding Path=ConsoleForegroundColor}"
                 FontFamily="Consolas" TextWrapping="Wrap" Focusable="True"
                 KeyDown="TBConsole_KeyDown" TextChanged="TBConsole_TextChanged" VerticalScrollBarVisibility="Visible" />
        <local:DropdownMenu x:Name="DDM"/>
        <TextBox x:Name="StatusLine" Grid.Row="2" Margin="5,0,5,5" IsReadOnly="True"/>
    </Grid>
</Window>
