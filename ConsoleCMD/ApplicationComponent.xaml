<UserControl x:Class="ConsoleCMD.ApplicationComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" Style="{StaticResource CommonStyle}"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <Image Source="{Binding IconPath}" Width="25" Height="25"/>
        <Label Content="{Binding Name}" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
