<local:FileSystemObject x:Class="ConsoleCMD.File"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConsoleCMD"
             mc:Ignorable="d" Width="100" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <Image Width="25" Height="25">
            <Image.Source>
                <Binding Path="IconSource">
                    <Binding.TargetNullValue>
                        <ImageSource>/Resources/Icons/Files/default.png</ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        <TextBlock Text="{Binding Title}" TextAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</local:FileSystemObject>
